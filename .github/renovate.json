{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "labels": [
        "dependencies"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "matchPackageNames": [
                "*"
            ]
        },
        {
            "matchPackageNames": [
                "*ffmpeg**"
            ],
            "enabled": false
        }
    ],
    "extends": [
        "config:recommended"
    ]
}
